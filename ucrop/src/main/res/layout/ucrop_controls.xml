<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/wrapper_controls"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_98sdp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ucrop_wrapper_controls_shape" />

        <HorizontalScrollView
            android:id="@+id/layout_aspect_ratio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="#F2F2F2"
            android:gravity="center"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/llSize"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/_64sdp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/ivOriginal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_84sdp"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:src="@drawable/im_crop_original" />

                    <ImageView
                        android:id="@+id/ivTickOriginal"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/_5sdp"
                        android:paddingEnd="-6dp"
                        android:src="@drawable/ic_tick_cir"
                        android:visibility="gone"
                        tools:ignore="RtlSymmetry" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/_64sdp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/iv1_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_84sdp"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/im_crop_1_1" />

                    <ImageView
                        android:id="@+id/ivTick1_1"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/_5sdp"
                        android:paddingEnd="-6dp"
                        android:src="@drawable/ic_tick_cir"
                        android:visibility="gone"
                        tools:ignore="RtlSymmetry" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/_64sdp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/iv3_4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_84sdp"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/im_crop_3_4" />

                    <ImageView
                        android:id="@+id/ivTick3_4"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/_5sdp"
                        android:paddingEnd="-6dp"
                        android:src="@drawable/ic_tick_cir"
                        android:visibility="gone"
                        tools:ignore="RtlSymmetry" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/_64sdp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/iv4_3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_84sdp"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/im_crop_4_3" />

                    <ImageView
                        android:id="@+id/ivTick4_3"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/_5sdp"
                        android:paddingEnd="-6dp"
                        android:src="@drawable/ic_tick_cir"
                        android:visibility="gone"
                        tools:ignore="RtlSymmetry" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/_64sdp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/iv9_16"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_84sdp"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/im_crop_9_16" />

                    <ImageView
                        android:id="@+id/ivTick9_16"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/_5sdp"
                        android:paddingEnd="-6dp"
                        android:src="@drawable/ic_tick_cir"
                        android:visibility="gone"
                        tools:ignore="RtlSymmetry" />
                </RelativeLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!--        <LinearLayout-->
        <!--            android:id="@+id/layout_aspect_ratio"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:background="#F2F2F2"-->
        <!--            android:gravity="center"-->
        <!--            android:orientation="horizontal" />-->

        <include
            android:id="@+id/layout_rotate_wheel"
            layout="@layout/ucrop_layout_rotate_wheel"
            android:visibility="gone" />

        <include
            android:id="@+id/layout_scale_wheel"
            layout="@layout/ucrop_layout_scale_wheel"
            android:visibility="gone" />

    </FrameLayout>

    <ImageView
        android:id="@+id/controls_shadow"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignBottom="@+id/wrapper_controls"
        android:src="@drawable/ucrop_shadow_upside" />

    <LinearLayout
        android:id="@+id/wrapper_states"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp"
        android:layout_below="@+id/controls_shadow"
        android:baselineAligned="false"
        android:background="@color/ucrop_color_white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/state_aspect_ratio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_state_aspect_ratio"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:padding="@dimen/_2sdp"
                app:srcCompat="@drawable/ucrop_crop" />

            <TextView
                android:id="@+id/text_view_crop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/alegreya_regular"
                android:text="@string/ucrop_crop"
                android:textColor="#242424"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/state_rotate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_state_rotate"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:padding="@dimen/_2sdp"
                app:srcCompat="@drawable/ucrop_rotate" />

            <TextView
                android:id="@+id/text_view_rotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/alegreya_regular"
                android:text="@string/ucrop_rotate"
                android:textColor="#242424"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/state_scale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_state_scale"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:padding="@dimen/_2sdp"
                app:srcCompat="@drawable/ucrop_scale" />

            <TextView
                android:id="@+id/text_view_scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/alegreya_regular"
                android:text="@string/ucrop_scale"
                android:textColor="#242424"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
