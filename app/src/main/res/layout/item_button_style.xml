<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_90sdp"
    android:layout_height="@dimen/_90sdp">

    <ImageView
        android:id="@+id/ivChoose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_choose_square" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_4sdp">

        <ImageView
            android:id="@+id/ivBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="@string/private_number"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivAnswer"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/ic_answer_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="@dimen/_4sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:alpha=".5"
            android:src="@drawable/ic_right"
            app:layout_constraintBottom_toBottomOf="@id/ivAnswer"
            app:layout_constraintStart_toEndOf="@id/ivAnswer"
            app:layout_constraintTop_toTopOf="@id/ivAnswer"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/ivDeny"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/ic_deny_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:layout_width="@dimen/_4sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:alpha=".5"
            android:rotation="180"
            android:src="@drawable/ic_right"
            app:layout_constraintBottom_toBottomOf="@+id/ivDeny"
            app:layout_constraintEnd_toStartOf="@id/ivDeny"
            app:layout_constraintTop_toTopOf="@id/ivDeny"
            app:tint="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>